{
  "expo": {
     "name": "LactaMed",
    "slug": "lactamed",
    "extra": {
      "API_BASE_URL": "https://lactamed-api.onrender.com",
      "eas": {
        "projectId": "8ede2204-0cfb-411d-8b0e-c6cda0d6e421"
      }
    },
    "version": "1.0.0",
